 <div class="container">
  <div class="row">
    <div class="col-lg-4 mt-2">
      <h2 class="mt-3"><strong>My page</strong></h2><br>
      <%= render 'users/info', user: current_user %>
      <% if @user == current_user && @user.name != "ゲストユーザー" %>
      <div>
        <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block edit_user_#{@user.id}" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <% end %>
    </div>

    <div class="mx-auto col-lg-8 ml-3">
       <h4 class="mt-5"><strong>聖地巡礼一覧</strong></h4><br>
       <table class='table table-hover table-inverse'>
       <thead>
        <tr>
          <th></th>
          <th>聖地名</th>
          <th>投稿日</th>
          <th>お気に入り数</th>
        </tr>
      </thead>
       <% @posts.each do |post| %>
       <tr>
          <td>
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_post_image(100,100) %></td>
            <% end %>
          </td>
          <td>
            <%= link_to post.title, post_path(post.id), class:"post_#[post.id}" %>
          </td>
          <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= render "favorites/favorite", post: post %></td>
       </tr>
       <% end %>
       </tbody>
      </table>
      <%= paginate @posts %>
      <h4 class="mt-5"><strong>お気に入り一覧</strong></h4><br>
       <table class='table table-hover table-inverse'>
       <thead>
        <tr>
          <th></th>
          <th>投稿者</th>
          <th>聖地名</th>
          <th>投稿日</th>
        </tr>
      </thead>
      <% if @favorite_list.present? %>
        <% @favorite_list.each do |post| %>
         <tr>
           <td>
              <%= link_to post_path(post.id) do %>
                <%= image_tag post.get_post_image(100,100) %>
              <% end %>
           </td>
            <td><%= link_to @post.user.name, user_path(@user.id) %></td>
            <td>
              <%= link_to post.title, post_path(post.id), class:"post_#[post.id}" %>
            </td>
            <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
         </tr>
        <% end %>
       <% end %>
       </tbody>
      </table>
    </div>
  </div>
</div>