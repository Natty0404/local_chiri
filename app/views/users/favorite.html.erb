<div class="container mt-3">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="mt-4"><strong><%= @user.name %> のお気に入り一覧</strong></h2><br>
      <% if @favorite_list.present? %>
       <table class='table table-hover table-inverse'>
         <thead>
          <tr>
            <th></th>
            <th>投稿者</th>
            <th>聖地名</th>
            <th>お気に入り数</th>
          </tr>
        </thead>
        <% @favorite_list.each do |post| %>
         <tr>
           <td>
              <%= link_to post_path(post.id), data: {"turbolinks" => false} do %>
                <%= image_tag post.get_post_image(100,100) %>
              <% end %>
           </td>
            <td><%= link_to post.user.name, user_path(post.user.id) %></td>
            <td>
              <%= link_to post.title, post_path(post.id), data: {"turbolinks" => false} %>
            </td>
            <td><%= post.favorites.count %></td>
         </tr>
        <% end %>
      </table>
      <%= paginate @favorite_list %>
      <% else %>
        <p>お気に入りしている投稿はありません</p>
      <% end %>
    </div>
  </div>
</div>

