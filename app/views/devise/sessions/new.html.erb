<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-6'>
      <h3 class="mt-5"><strong>ログイン</strong></h3><br>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="mb-3">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class:"form-control", autocomplete: "current-password", placeholder: "6文字以上" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="mb-5">
        <%= f.submit "ログイン", class:"btn btn-outline-primary btn-block" %>
      </div>
      <% end %>

      <div class="mb-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
