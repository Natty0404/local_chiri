<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-6'>
      <h3 class="mt-5"><strong>パスワード再設定</strong></h3>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-3">
        <%= f.label :password, "新しいパスワード" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, class:"form-control", autofocus: true, autocomplete: "new-password", placeholder: "6文字以上" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "確認用パスワード" %><br />
        <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
      </div>

      <div class="mb-3">
        <%= f.submit "パスワードを変更する", class:"form-control", placeholder: "6文字以上" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
