<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-6'>
      <h3 class="mt-5"><strong>パスワード再設定</strong></h3><br><br>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div><br>

      <div class="mb-3">
        <%= f.submit "パスワード再設定メールを送信", class:"btn btn-outline-secondary btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>



