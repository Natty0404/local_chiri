<div class="container">
  <div class="row">
    <div class="mx-auto col-lg-6">
      <h3 class="mt-5"><strong>新規登録</strong></h3><br>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="mb-3">
          <%= f.label :name, "ニックネーム" %>
          <%= f.text_field :name, class:"form-control", autofocus: true, autocomplete: "name" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, class:"form-control", autocomplete: "new-password", placeholder: "6文字以上" %>
        </div>

        <div class="mb-5">
          <%= f.label :password_confirmation, "確認用パスワード" %>
          <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
        </div>

        <div class="mb-5">
          <%= f.submit "新規登録", class:"btn btn-outline-success btn-block" %>
        </div>
        <% end %>

        <div>
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>

