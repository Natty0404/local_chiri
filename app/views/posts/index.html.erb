<div class="container mt-3">
  <div class="row ml-4">
    <div class="col-lg-12 float-center">
      <h2 class><strong>みんなの聖地一覧</strong></h2><br>
      <%= render "searches/form" %>
       <table class="table table-hover table-inverse">
       <thead>
        <tr>
          <th></th>
          <th>聖地名</th>
          <th>投稿者</th>
          <th>お気に入り数</th>
        </tr>
      </thead>
       <% @posts.each do |post| %>
       <tr>
          <td>
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_post_image(100,100) %></td>
            <% end %>
          </td>
          <td>
            <%= link_to post.title, post_path(post.id), class:"post_#[post.id}" %>
          </td>
          <td>
            <%= link_to post.user.name, user_path(post.user.id), class:"post_#[user.id}" %>
          </td>
          <td class="favorite_btn_<%= post.id %>">
            <%= render "favorites/favorite", post: post %>
          </td>
       </tr>
       <% end %>
       </tbody>
      </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>




