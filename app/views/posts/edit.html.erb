<%= render "layouts/flash" %>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2 class="mt-5"><strong>投稿編集</strong></h2><br>
    <% if @post.errors.any? %>
      <%= @post.errors.count %>件のエラーが発生しました
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model:@post, local:true do |f| %>
      <div class="mb-4">
        <%= f.label :post_image, "投稿画像" %>
        <%= f.file_field :post_image, accept: "image/*", class:"form-control-file" %>
      </div>
      <div class="mb-4">
        <%= f.label :title, "聖地名（作品名）" %>
        <%= f.text_field :title, class:"form-control" %>
      </div>
      <div class="mb-4">
        <%= f.label :body, "聖地詳細" %>
        <%= f.text_field :body, class:"form-control" %>
      </div>
      <div class="mb-5">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, class:"form-control" %>
      </div>
      <div class="row">
        <div class="col">
         <%= f.submit "更新", class:"btn btn-outline-success btn-block" %>
        </div>
        <div class="col">
          <%= link_to "戻る", post_path(@post.id), class:"btn btn-outline-danger btn-block" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>


