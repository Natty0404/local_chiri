<% post.post_comments.each do |post_comment| %>
  <p><%= image_tag post_comment.user.get_profile_image(50,50) %>　<%= link_to post_comment.user.name, user_path(@user.id) %></p>
  <p><%= post_comment.comment %>　<%= post_comment.created_at.strftime('%Y/%m/%d') %></p>
  <% if post_comment.user == current_user %>
   <%= link_to "削除", post_post_comments_path(post_comment.post, post_comment), method: :delete, class:"btn btn-danger" %>
  <% end %><br><br>
<% end %>