<% post_comments.each do |post_comment| %>
  <p><%= image_tag post_comment.user.get_profile_image(50,50) %>　<%= link_to post_comment.user.name, admin_user_path(post_comment.user) %></p>
  <p><%= post_comment.comment %>　<%= post_comment.created_at.strftime('%Y/%m/%d') %></p>
  <%= link_to "削除", admin_post_post_comment_path(post_comment.post_id, post_comment.id), method: :delete, remote: true, local: false, class:"btn btn-danger rounded-pill btn-sm mb-1", data: { confirm: "本当に削除しますか？" } %>
<% end %>