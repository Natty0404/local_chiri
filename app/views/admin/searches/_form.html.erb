<% if admin_signed_in? %>
  <div class="search-form mb-3">
    <%= form_with url: admin_search_path, local: true, method: :get do |f| %>
    <div class="row">
      <div class="col-6">
        <%= f.text_field :word, class:"form-control", placeholder: "検索ワード" %>
      </div>
      <div class="col-6">
        <%= f.select :range, options_for_select([['聖地名'], ['ユーザー名']]) %>　　<%= f.submit "検索", class:"btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
<% end %>