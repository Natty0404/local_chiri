 <div class="container">
  <div class="row">
    <div class="col-lg-3 mt-2">
      <h2 class="mt-3"><strong><%= @user.name %>'s Page</strong></h2><br>
      <%= render 'admin/users/info', user: @user %>
      <div class="mb-4">
        <%= link_to edit_admin_user_path(@user.id), class:"btn btn-outline-secondary btn-block edit_user_#{@user.id}" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
    </div>

    <div class="mx-auto col-lg-9">
       <h4 class="mt-5"><strong>聖地巡礼一覧</strong></h4><br>
       <table class='table table-hover table-inverse'>
       <thead>
        <tr>
          <th></th>
          <th>聖地名</th>
          <th>投稿日</th>
          <th>お気に入り数</th>
          <th>コメント数</th>
        </tr>
      </thead>
       <% @posts.each do |post| %>
       <tr>
          <td>
            <%= link_to admin_post_path(post.id) do %>
              <%= image_tag post.get_post_image(100,100) %></td>
            <% end %>
          </td>
          <td>
            <%= link_to post.title, admin_post_path(post.id), class:"post_#[post.id}" %>
          </td>
          <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= post.favorites.count %></td>
          <td><%= post.post_comments.count %></td>
       </tr>
       <% end %>
       </tbody>
      </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>