<div class="container mt-3">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="mt-4"><strong>会員一覧</strong></h2><br>
       <table class='table table-hover table-inverse'>
       <thead>
        <tr>
          <th>会員ID</th>
          <th></th>
          <th>会員名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
       <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= image_tag user.get_profile_image(30,30) %></td>
            <td>
              <%= link_to  admin_user_path(user.id) do %>
                <%= user.name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_deleted == true %>
                <span class="text-secondary" ><strong>退会</strong></span>
              <% else %>
                <span class="text-success" ><strong>有効</strong></span>
              <% end %>
            </td>
          </tr>
          <% end %>
       </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>