<% if user_signed_in? %>
  <div class="search-form mb-3">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
    <div class="row">
      <div class="col-4">
        <%= f.text_field :word, value: @word, class:"form-control", placeholder: "検索ワード" %>
      </div>
      <div class="col-3">
        <%= f.submit "検索", class:"btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
<% end %>