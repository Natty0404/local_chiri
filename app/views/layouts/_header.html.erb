<header>
  <nav class="navbar navbar-expand-lg navbar-dark color" style="background-color:#008080" >
    <div class="container">
      <% if user_signed_in? %>
        <%= link_to posts_path do %>
          <%= image_tag "logo_text3.png", width: "120px" %>
        <% end %>
      <% else %>
        <%= link_to root_path do %>
          <%= image_tag "logo_text3.png", width: "120px" %>
        <% end %>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <nav class="nav navbar-nav text-white mt-2 mr-4">
            <span>Hello, <%= current_user.name %> !</span>
          </nav>
          <li>
            <%= link_to "My page", user_path(current_user), class: "btn btn-outline-light mr-4 mb-1" %>
          </li>
          <li>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-outline-light mb-1" %>
          </li>
        <% else %>
          <li>
            <%= link_to "Home", root_path, class: "btn btn-outline-light mr-4 mb-1" %>
          </li>
          <li>
            <%= link_to "About", home_about_path, class: "btn btn-outline-light mr-4 mb-1" %>
          </li>
          <li>
            <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-light mr-4 mb-1" %>
          </li>
          <li>
            <%= link_to "Log in", new_user_session_path, class: "btn btn-outline-light mb-1" %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>