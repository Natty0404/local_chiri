<% if users.exists? %>
  <% users.each do |user| %>
    <table class="table">
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image(80,80) %></td>
          <td><%= link_to user.name, user_path(user.id) %></td>
          <td><%= user.followings.count %>　フォロー</td>
          <td><%= user.followers.count %>　フォロワー</td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
